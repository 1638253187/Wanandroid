<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorGray"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/jzvideo"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:background="@color/colorGray"
            />

       <ImageView
           android:id="@+id/iv_top"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="10dp"
           android:layout_marginBottom="10dp"
           android:layout_below="@+id/jzvideo"
           />
        <TextView
            android:id="@+id/tv_topicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_top"
            android:layout_toLeftOf="@+id/iv_down"
            android:layout_below="@+id/jzvideo"
            android:layout_marginTop="21dp"
            android:text="猎奇"
            android:textColor="@color/colorGray2"
            />
        <ImageButton
            android:id="@+id/iv_zan"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/jzvideo"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/iv_share"
            android:layout_marginRight="32dp"
            android:background="@mipmap/zz"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/jzvideo"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ydc"
            />
        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/jzvideo"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="85dp"
            android:src="@mipmap/download"
            />
        <ImageView
            android:id="@+id/iv_resp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/jzvideo"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:src="@mipmap/resp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>